@model EAD_Project_ii_.Models.user
@{
    ViewBag.Title = "loginSignup";
    Layout = "~/Views/Shared/_logSharedView.cshtml";
}

<section id="main" class="wrapper">
    <div class="container-form">
        <header class="major">
            <h2>Change Password</h2>
        </header>
        <!-- Form -->
        <section>
            <h2>Your current Password is "@Model.password".</h2>

            <form method="post" action="~/Log/changePass/">
                <div class="row uniform 50%">
                    <div class="6u 12u$(xsmall)">
                        <h3>Enter User Name</h3>
                        <input type="text" name="userName" id="userName" placeholder="User Name" required />
                    </div>

                    <div class="6u$ 12u$(xsmall)">
                        <h3>Enter Password</h3>
                        <input type="password" name="password" id="password" placeholder="password" required />
                    </div>
                    <div class="6u$ 12u$(xsmall)">
                        <h3>Re-Enter Password</h3>
                        <input type="password" name="password2" id="password2" placeholder="Re-Enter password" required />
                    </div>
                    <!--div class="12u$">
                            <input type="submit" value="Sign Up" class="special">
                        </!--div-->
                    <div class="12u$">
                        <input type="submit" id="changePass" value="Change Password" class="special">
                    </div>
                </div>
            </form>
        </section>

        <!-- Image -->

    </div>
</section>

